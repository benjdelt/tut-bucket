<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/display_resources.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
  <div id="ben">
    <!-- Navbar -->
    <nav class="navbar fixed-top navbar-light bg-light">

      <a href="#" ><img src="images/logo.png" class="navbar-brand" width="60" heigth="80" alt="logo"/></a>

      <form action="/resources" method="GET" class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      </form>
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link" href="/users/<%- userId %>">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/resources">Browse</a>
        </li>
        <li class="nav-item">
          <a id="new" class="nav-link" href="#" data-toggle="modal" data-target="#new-resource-form">+</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Logout</a>
        </li>
      </ul>
    </nav>
    <!-- New Resource Form  -->
    <div class="modal fade" id="new-resource-form" tabindex="-1" role="form" >
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="newFormTitle">New Resource</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <form id="newForm" method="POST" action="/resources">

              <div class="modal-body">
                <div class="form-group">
                  <label for="newFormTitle">Title</label>
                  <input class="form-control" id="newFormTitle" type="text" name="title" placeholder="Title" required>
                </div>
                
                <div class="form-group">
                  <label for="newFormImageUrl">Image</label>
                  <input class="form-control" id="newFormImageUrl" type="text" name="imageUrl" placeholder="add an image URL">
                </div>
                
                <div class="form-group">
                  <label for="newFormDescription">Description</label>
                  <textarea class="form-control" id="newFormDescription" name="description" placeholder="description" required></textarea>
                </div>
                
                <!-- <div class="d-flex justify-content-between"> -->

                  <div class="form-group">
                      <label for="newFormCategory">Category</label>
                      <select class="form-control" id="newFormCategory" name="category">
                      </select>
                  </div>

                  <div class="form-group">
                   <label for="newFormURL">URL</label>
                    <input class="form-control" id="newFormURL" type="text" name="url" placeholder="Link to the resource" required>
                  </div>
                <!-- </div> -->
              </div>
              
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input id="newFormSubmit" type="submit" class="btn btn-primary"value="Save">
              </div>
            
            </form>
          </div>
        </div>
      </div>
  </div>
  <div id="jotham">
    <div id="categories-buttons" class="d-flex p-2" style="overflow:auto;margin-top:100px;"></div>
  </div>
  <div id="nick" class="container">
    <div id="collections" class="row text-center text-lg-left">
    </div>
  </div>
    <script src=scripts/new-form.js></script>
    <script src="scripts/getCategoryButtons.js"></script>
    <script type="text/javascript" src="/scripts/postLike.js"></script>
    <script type="text/javascript" src="/scripts/postRatings.js"></script>
    <script type="text/javascript" src="/scripts/postComments.js"></script>
    <script type="text/javascript" src="/scripts/getComments.js"></script>
    <script type="text/javascript" src="/scripts/getResource.js"></script>
    <script type="text/javascript" src="/scripts/getResourcesByCategory.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
