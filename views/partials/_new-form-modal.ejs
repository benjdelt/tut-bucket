
 <!-- New Resource Form  -->
  <div class="modal fade" id="new-resource-form" tabindex="-1" role="form" >
      <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalTitle">New Resource</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <form id="newForm" method="POST" action="/resources">

            
            <div class="modal-body">

              <input id="newFormId" type="hidden" name="id" value="">
                
              <div class="form-group">
                <label for="newFormTitle">Title</label>
                <input class="form-control" id="newFormTitle" type="text" name="title" placeholder="Title" required>
              </div>
              
              <div class="form-group">
                <label for="newFormImageUrl">Image</label>
                <input class="form-control" id="newFormImageUrl" type="url" pattern="https://.*" name="imageUrl" placeholder="add an image URL">
              </div>
              
              <div class="form-group">
                <label for="newFormDescription">Description</label>
                <textarea class="form-control" id="newFormDescription" name="description" placeholder="description" required></textarea>
              </div>
              
              <!-- <div class="d-flex justify-content-between"> -->

                <div class="form-group">
                    <label for="newFormCategory">Category</label>
                    <select class="form-control" id="newFormCategory" name="category">
                    </select>
                </div>

                <div class="form-group">
                 <label for="newFormURL">URL</label>
                  <input class="form-control" id="newFormURL" type="url" pattern="https://.*" name="url" placeholder="Link to the resource" required>
                </div>
              <!-- </div> -->
            </div>
            
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <input id="newFormSubmit" type="submit" class="btn btn-primary"value="Save">
            </div>
          
          </form>
        </div>
      </div>
    </div>